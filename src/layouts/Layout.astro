---
import 'aos/dist/aos.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="../index.css" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="bg-gradient-to-r from-blue-400 to-purple-400 overflow-hidden min-h-min w-full">

	<slot />

	<script>
		import AOS from 'aos';
		AOS.init();

	</script>

	<script>
		console.log('Layout loaded');

		document.addEventListener('DOMContentLoaded', () => {
			// Scrollear al inicio de todo
			window.scrollTo({
				top: 0,
				behavior: 'smooth',
			});

			console.log('Page loaded');

			// Scrollear smooth abajo despues de un tiempo
			setTimeout(() => {
				window.scrollTo({
					top: document.getElementById('exercise-1').offsetTop - 40,
					behavior: 'smooth',
				});
				// Quitar la clase overflow-hidden del body
				document.body.classList.remove('overflow-hidden');
			}, 4000); // 4000
		});
	</script>

	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
